@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h3>Sign In!</h3>
<br />
<h4>@Model.Message</h4>
<br />
<br />
<form method="post">
    <table>
        <tr>
            <td>UserName</td>
            <td><input asp-for="@Model.user.UserName" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" asp-for="@Model.user.Password" /></td>
        </tr>
        <tr>
            <td>Login</td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
</form>
</div>
