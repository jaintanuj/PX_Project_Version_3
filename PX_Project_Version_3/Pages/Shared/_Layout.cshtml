<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <script src="~/js/jquery-3.5.1.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoTrack Hackathon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/master.css">
</head>
<body>
    <div class="wrapperone">
        <div class="wrapper">

            <!-- Top Nav Bar  -->
            <div id="content">

                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        <i class="fas fa-align-justify"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            @await Component.InvokeAsync("NavBarComponent")
                        </ul>
                    </div>
                </nav>
                <br>
                <!-- Content of Page-->
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>

            </div>
        </div>
    </div>                            


    <!-- Footer comes in here -->
    <div class="footer">
        <div class="fotter-setting">
            <div class="footer-bs">
                <div class="row">
                    <div class="col-md-4 footer-brand animated fadeInLeft">
                        <h2>InfoTrack</h2>
                    </div>
                    <div class="col-md footer-nav animated fadeInUp">
                        <div class="col-md">
                            <ul class="list">
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Contacts</a></li>
                                <li><a href="#">Terms & Condition</a></li>
                                <li><a href="#">Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2 footer-social animated fadeInDown">
                        <h4>Follow Us</h4>
                        <ul>
                            <li>
                                <a href="https://www.facebook.com/infotrackaus"><i class="fab fa-facebook-f"> Facebook</i></a>
                            </li>
                            <li><a href="https://twitter.com/InfoTrack_aus"><i class="fab fa-twitter"> Twitter</i></a></li>
                            <li>
                                <a href="https://www.instagram.com/infotrack_au/"><i class="fab fa-instagram"> Instagram</i></a>
                            </li>
                            <li><a href="#"><i class="fas fa-rss"></i> RSS</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 footer-ns animated fadeInRight">
                        <h4>Newsletter</h4>
                        <p>A rover wearing a fuzzy suit doesn’t alarm the real penguins</p>
                        <p>
                            <div class="input-group">
                                <button type="button"
                                        class="btn btn-warning btn-block">
                                    Go to Our Website!
                                </button>
                            </div><!-- /input-group -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>


