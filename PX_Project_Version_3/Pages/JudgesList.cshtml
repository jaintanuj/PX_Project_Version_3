@page
@model PX_Project_Version_3.Pages.JudgesListModel

@{
    ViewData["Title"] = "JudgesList";
}

<h1>Judges List</h1>

<div>
    <form method="post">
        <select name="eventid" asp-items="Model.eventList"></select>
        <input type="submit" class="btn btn-primary" value="Filter Results">
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.judges[0].UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.judges[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.judges[0].EventID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.judges) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.JudgeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.JudgeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.JudgeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
