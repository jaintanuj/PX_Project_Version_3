@page
@model PX_Project_Version_3.Pages.PeopleVotesModel

@{
    ViewData["Title"] = "PeopleVotes";
}

<h1>People's Votes</h1>

<div class="banner">
    <img src="~/lib/images/InfoTrackPeopleVote.png"
         style="width:75%">
</div>

<!-- Overriding Datatables classes -->
<style>
    .searchBox > div {
        float: none;
    }

    .dataTables_wrapper .searchBox .dataTables_filter {
        float: left
    }
</style>

<head>
    <link rel="stylesheet" href="~/css/master.css">
    <!-- DataTables CSS and JS-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css">
    <script src="~/js/jquery-3.5.1.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.editor.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                dom: '<"searchBox"f>t',
                responsive: true,
                columnDefs: [
                    { responsivePriority: 1 },
                    { responsivePriority: 3 },
                    { responsivePriority: 4 },
                    { responsivePriority: 5 },
                    { responsivePriority: 6 },
                    { responsivePriority: 2 }
                ]
            });
        });
    </script>
</head>


<h3>@Model.Message</h3>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Idea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].EventID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].JoinCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Team)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.isAdmin)
{
    <div>
        <form method="post">
            <input type="submit" value="Save Winner">
        </form>
    </div>
}
