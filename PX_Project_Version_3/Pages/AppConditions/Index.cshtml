@page
@model PX_Project_Version_3.Pages.AppConditions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<!-- Overriding Datatables classes -->
<style>
    .searchBox > div {
        float: none;
    }

    .dataTables_wrapper .searchBox .dataTables_filter {
        float: left
    }
</style>

<head>
    <link rel="stylesheet" href="~/css/master.css">
    <!-- DataTables CSS and JS-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css">
    <script src="~/js/jquery-3.5.1.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.editor.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                dom: '<"searchBox"f>t',
                responsive: true,
                columnDefs: [
                    { responsivePriority: 7 },
                    { responsivePriority: 1 },
                    { responsivePriority: 6 },
                    { responsivePriority: 5 },
                    { responsivePriority: 4 },
                    { responsivePriority: 3 },
                    { responsivePriority: 2 }
                ]
            });
        });
    </script>
</head>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].AdminID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].AdminName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].EventID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].ThemeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].VotesAllowed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].MemberPerTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppCondition[0].AppStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AppCondition)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThemeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VotesAllowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberPerTeam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppStatus)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AppConditionId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.AppConditionId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AppConditionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
