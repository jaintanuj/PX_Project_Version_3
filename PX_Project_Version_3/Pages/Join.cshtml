@page
@model PX_Project_Version_3.Pages.JoinModel

@{
    ViewData["Title"] = "Join";
}

<h1>Join</h1>

<h3>Are you sure you want to Join this Team?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <h4>@Model.Message</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Idea)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Idea)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventCode)
        </dd>
    </dl>

    @if (Model.InLimit)
    {
        <form method="post">
            <input type="hidden" asp-for="Team.TeamId" />
            <input type="text" name="joinCode">
            <input type="submit" value="Join Team" class="btn btn-primary" />
            <a asp-page="./JoinTeam">Teams List</a>
        </form>


    }
</div>
