@page
@model PX_Project_Version_3.Pages.Themes.DeleteModel

@{
    ViewData["Title"] = "Delete a Theme";
}
@if (Model.isAdmin)
{
    <h1>Theme Deletion</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Theme</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Theme.ThemeName)
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Theme.description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.EventCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.EventCode)
            </dd>

        </dl>

        <form method="post">
            <input type="hidden" asp-for="Theme.ThemeId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
}
    @if (!Model.isAdmin)
    {
        <p style="color:red">You are not authorised to view this page.</p>
    }