                @Html.DisplayFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.EventCode)
            </td>
            <td>
                @Html.DisplayFor(model => model.UserName)
            </td>
            <td>
                <a asp-page="./ConfirmJudgeWinner" asp-route-id="@item.TieBreakerId">Winner</a>

            </td>
        </tr>
}
    </tbody>
