@page
@model PX_Project_Version_3.Pages.DeleteUserModel

@{
    ViewData["Title"] = "DeleteUser";
}

<h1>DeleteUser</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        @if (Model.isLeader)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamName)
            </dd>
        }
        @if (Model.isMember)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.totalMemberShip)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.totalMemberShip)
            </dd>
        }
        @if (Model.isVoter)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.totalVotes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.totalVotes)
            </dd>
        }
        @if (Model.isJudge)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JudgeEvent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JudgeEvent)
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.UserId" />
        <input type="submit" value="Delete User" class="btn btn-danger" /> |
        <a asp-page="./AllUsers">Back to All Users</a>
    </form>
</div>
